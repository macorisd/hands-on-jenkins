#!/usr/bin/groovy

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps { buildApp() }
		}

        stage("Deploy - Dev") {
            steps { deploy('dev') }
		}

	}
}


// steps
def buildApp() {
	dir ('section_4/code/cd_pipeline' ) {
		// Detectar sistema operativo y usar el comando apropiado
		if (isUnix()) {
			sh "docker build -t hands-on-jenkins/myapp:${BUILD_NUMBER} ."
		} else {
			bat "docker build -t hands-on-jenkins/myapp:${BUILD_NUMBER} ."
		}
	}
}

def deploy(environment) {

	def containerName = ''
	def port = ''

	if ("${environment}" == 'dev') {
		containerName = "app_dev"
		port = "8888"
	} 
	else {
		println "Environment not valid"
		System.exit(0)
	}

	// Detectar sistema operativo
	if (isUnix()) {
		sh "docker ps -f name=${containerName} -q | xargs --no-run-if-empty docker stop"
		sh "docker ps -a -f name=${containerName} -q | xargs -r docker rm"
		sh "docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}"
	} else {
		bat """
			@echo off
			for /f %%i in ('docker ps -q -f name=${containerName}') do docker stop %%i 2>nul
			for /f %%i in ('docker ps -a -q -f name=${containerName}') do docker rm %%i 2>nul
			docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}
		"""
	}

}

